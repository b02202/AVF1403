var coordinateLabel;
var coordText;
var locBtn = Ti.UI.createButton({
	title: 'LOCATION',
	font: {fontSize: 25, fontFamily: "Arial"},
	color: '#fff',
	backgroundColor: '#b5b7b9',
	borderColor: '#fff',
	borderWidth: 1,
	width: '25%',
	height: 75,
	bottom: 0,
	right: 0,
	enabled: false
	
});

var runGeo = function(){
	Ti.Geolocation.purpose = "Your location is needed to gather lat/long coords.";
	Ti.Geolocation.getCurrentPosition(function(e){
		var lat = e.coords.latitude;
		var lng = e.coords.longitude;
		coordText = 'Latitude: ' + lat + ', Longitude: ' + lng;
		
		/*var coordinateLabel = Ti.UI.createLabel({
			color: '#fff',
			text: 'Latitude: ' + lat + ', Longitude: ' + lng,
			height: Ti.UI.SIZE,
			textAlign: 'center',
			font: {
				fontSize: '20dp',
				fontWeight: 'bold'
			} 
		});*/
		//myView.add(coordinateLabel);
	});
	return coordText;
};
//exports.geo = runGeo();
